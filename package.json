{
  "name": "decode-bmp",
  "version": "0.1.0",
  "license": "MIT",
  "repository": "LinusU/decode-bmp",
  "scripts": {
    "test": "standard && mocha",
    "build:wasm": "asc prelude.ts src/index.ts -b build/optimized.wasm --validate --optimize",
    "build:js": "tsc -p src/tsconfig.json --outDir build",
    "copy:loader": "cp node_modules/assemblyscript/lib/loader/index.js build/loader.js",
    "prepare": "npm run build:wasm && npm run build:js && npm run copy:loader"
  },
  "files": [
    "index.d.ts",
    "index.js",
    "build/index.js",
    "build/loader.js",
    "build/optimized.wasm"
  ],
  "devDependencies": {
    "assemblyscript": "github:AssemblyScript/assemblyscript#d5f72e3",
    "globby": "^8.0.1",
    "lodepng": "^1.1.0",
    "mocha": "^5.2.0",
    "standard": "^11.0.1"
  },
  "engines": {
    "node": ">=6"
  }
}
